<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="span4">&nbsp;</div>
  <div class="span4 vertcenter-outer">
    <div class="vertcenter-inner">
      <h2>Login</h2>
      <div class="share">
        <ul>
          <li><%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></li>
          <li><%= f.password_field :password, :placeholder => 'Password' %></li>
          <li><%= f.submit "Submit", :class => 'btn btn-block' %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
